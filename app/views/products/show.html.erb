<div class="container">
  <div class="row marginilized">
    <div class="col-xs-6 col-md-8">
      <h1><%= @product.design %> by <%= @product.brand.capitalize %></h1>
      <%= cl_image_tag @product.photo, height: 300, width: 600, crop: :fill %>
    </div>
    <div class="col-xs-6 col-md-4 booking-form">



      <%= simple_form_for @booking do |f| %>
        <%= f.input :start_date, as: :string, input_html: { class: "datepicker"}  %> <!-- can't be as: :date, otherwise the browser might overwrite it -->
        <%= f.input :end_date, as: :string, input_html: { class: "datepicker"}  %>
        <%= f.input :product_id, as: :hidden, input_html: { value: @product.id }%>
        <%= f.button :submit, "Open request" %>
      <% end %>


        <p>Pre√ßo por dia: <%= @product.price %></p>
    </div>
  </div>
</div>


<%= content_for :javascript do %>
  <script>
    $('.datepicker').datepicker({
      startDate: '0d',
      autoclose: true,
      format: 'dd/mm/yyyy',
      datesDisabled: <%= raw @unavailable %> // raw needed to pass the correct format from ruby to js
    });
  </script>
<% end %>
