<div class="banner-user" style="background-image: linear-gradient(320deg, rgba(255,104,107,0.6) 0%, rgba(0,0,0,0.6) 70%), url('http://res.cloudinary.com/dr4xmxoal/image/upload/v1487905881/ban3_ucn2il.jpg');">

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-6">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <%= f.button :submit, "Entre", class: "signup-button" %>
          <%= link_to "Entre com Facebook", user_facebook_omniauth_authorize_path, class: 'box facebook-effects' %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Esqueceu seu password?", new_password_path(resource_name), class: 'box forget-effects' %>
          <% end -%>
          <% end %>
      </div>
    </div>
  </div>
</div>

