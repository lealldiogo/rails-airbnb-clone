<div class="container">
  <h1>Suas Reservas</h1>
  <div class="row">
    <% @bookings.each do |b| %>
      <div class="col-xs-12 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
          <% if b.status === "em negociacão"%>
            <div class="panel panel-warning">
              <div class="panel-heading">
                <h2><%= link_to b.product.brand.capitalize, booking_path(b) %> <%= link_to b.product.design, booking_path(b) %> <span style="float:right;" class="glyphicon glyphicon-minus-sign"></span></h2>
              </div>
            </div>
            <div class="panel-body">
              <h4><%= b.start_date.strftime("%d/%m/%Y") %> até <%= b.end_date.strftime("%d/%m/%Y") %></h4>
              <h2><%= b.status %><span style="float:right;" class="btn btn-warning btn-lg">Falar com o dono</span></h2>
            </div>
          <% elsif b.status === "negado" %>
            <div class="panel panel-danger">
              <div class="panel-heading">
                <h2><%= link_to b.product.brand.capitalize, booking_path(b) %> <%= link_to b.product.design, booking_path(b) %> <span style="float:right;" class="glyphicon glyphicon-remove-sign"></h2>
              </div>
            </div>
            <div class="panel-body">
              <h4><%= b.start_date.strftime("%d/%m/%Y") %> até <%= b.end_date.strftime("%d/%m/%Y") %></h4>
              <h2><%= b.status %><span style="float:right;" class="btn btn-danger btn-lg">Tentar novamente</span></h2>
            </div>
          <% elsif b.status === "aceito" %>
            <div class="panel panel-success">
              <div class="panel-heading">
                <h2><%= link_to b.product.brand.capitalize, booking_path(b) %> <%= link_to b.product.design, booking_path(b) %> <span style="float:right;" class="glyphicon glyphicon-ok-sign"></span></h2>
              </div>
            </div>
            <div class="panel-body">
              <h4><%= b.start_date.strftime("%d/%m/%Y") %> até <%= b.end_date.strftime("%d/%m/%Y") %></h4>
              <h2><%= b.status %><span style="float:right;" class="btn btn-success btn-lg">Pagar agora</span></h2>

            </div>
          <%end%>
        </div>
      </div>
    <% end %>
  </div>
</div>
